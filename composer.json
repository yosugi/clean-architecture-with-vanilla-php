{
  "autoload": {
    "psr-4": {
      "Cavp\\" : "src/"
    }
  },
  "autoload-dev": {
      "psr-4": {
          "Cavp\\Tests\\": "tests/"
      }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.2",
    "phpstan/phpstan": "^0.12.34",
    "friendsofphp/php-cs-fixer": "^2.16"
  },
  "scripts": {
    "test": "phpunit",
    "lint": "php-cs-fixer fix --dry-run --diff",
    "lint:fix": "php-cs-fixer fix",
    "analyse" : "phpstan analyse -l8 src"
  }
}
